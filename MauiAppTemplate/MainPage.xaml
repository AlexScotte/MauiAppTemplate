<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:MauiAppTemplate.Views.Components"
             xmlns:ext="clr-namespace:MauiAppTemplate.Extensions"
             x:Class="MauiAppTemplate.MainPage"
             x:Name="page"
             Title="{ext:Translate MainPage_Title}">

    <Grid Style="{StaticResource AppThemeView}"
          ColumnDefinitions="*"
          ColumnSpacing="10"
          RowDefinitions="Auto,Auto"
          HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Padding="10,10,10,10"
          RowSpacing="10">

        <Label Grid.Row="0" 
               Style="{StaticResource LabelSmall}"
               Text="Welcome to main page !"
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" />

    </Grid>
</ContentPage>
