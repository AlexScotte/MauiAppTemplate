<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:MauiAppTemplate.Views.Components"
             x:Class="MauiAppTemplate.MainPage"
             x:Name="page"
             Title="MainPage">

    <Grid Style="{StaticResource AppThemeView}"
          ColumnDefinitions="*"
          ColumnSpacing="10"
          RowDefinitions="Auto,Auto,Auto"
          HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Padding="10,10,10,10"
          RowSpacing="10">

        <Label Grid.Row="0" 
               Style="{StaticResource LabelSmall}"
               Text="Welcome to main page !"
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" />

        <components:ComboBox Grid.Row="1" Items="{Binding MyItems, Source={x:Reference page}}"/>

        <Label Grid.Row="2"
               Style="{StaticResource LabelSmall}"
               Text="Welcome to main page !"
               TextColor="Red"
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" />

    </Grid>
</ContentPage>
