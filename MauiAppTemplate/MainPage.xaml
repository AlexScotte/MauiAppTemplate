<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTemplate.MainPage"
             Title="MainPage">

    <Grid Style="{StaticResource AppThemeView}"
          ColumnDefinitions="*"
          ColumnSpacing="10"
          RowDefinitions="Auto,Auto"
          HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Padding="10,10,10,10"
          RowSpacing="10">

        <Label Style="{StaticResource LabelSmall}"
               Text="Welcome to main page !"
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" />
        
    </Grid>
</ContentPage>
